<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <selector>
            <item android:drawable="@drawable/ic_record_pause_pressed" android:state_pressed="true" />
            <item android:drawable="@drawable/ic_record_pause_normal" android:state_pressed="false" />
        </selector>
    </item>
    <item android:state_activated="false">
        <selector>
            <item android:drawable="@drawable/ic_record_play_pressed" android:state_pressed="true" />
            <item android:drawable="@drawable/ic_record_play_normal" android:state_pressed="false" />
        </selector>
    </item>
</selector>